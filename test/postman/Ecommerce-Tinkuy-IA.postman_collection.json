  "item": [
    {
      "name": "IA - POST válido (200)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/deepseek_search.php",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"chompa de alpaca\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "const json = pm.response.json();",
              "pm.test('Tiene texto', function () { pm.expect(json.texto).to.be.a('string').and.not.empty; });"
            ]
          }
        }
      ]
    },
